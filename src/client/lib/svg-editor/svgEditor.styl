.svg-editor
  box-sizing border-box

  .background-file
    display inline-block

  .viewBox-editor
    display inline-block

  .name-value
    display inline-block
    label
      span
        display inline-block

    input
      width 60px
      text-align right
      border none

  .work-area
    position relative

    img.background
      position absolute
      left 0
      top 0
      opacity 0.5
      image-rendering pixelated
      background-color #ffc

    svg.surface
      position absolute
      left 0
      top 0
      stroke-width 0.3px
      stroke rgba(0,0,0,0.7)
      fill rgba(0,0,0,0.1)

    svg.preview
      position absolute
      right 0
      top 0

  textarea
    width 100%
    height 100%

  svg
    border 1px #aaa solid
    stroke-width 0px
    stroke #000
    fill #000
    fill-rule evenodd

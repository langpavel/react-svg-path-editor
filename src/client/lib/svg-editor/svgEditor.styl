.svg-editor
  box-sizing border-box

  .background-file
    display inline-block

  .viewBox-editor
    display inline-block

  .name-value
    display inline-block
    label
      span
        display inline-block

    input
      width 60px
      text-align right
      border none

  .work-area
    position relative

    > *
      position absolute
      left 0
      top 0
    img.background
      opacity 0.5
      image-rendering pixelated

  textarea
    width 100%
    height 100%

  svg
    border 1px #aaa solid
